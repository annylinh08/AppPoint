<!-- Modal detail info customer-->
<div class="modal fade " tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true"
     id="modalDetailPatientForMerchant">
    <div class="modal-dialog mw-100 w-75" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Customer information</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="form-group col-4">
                        <label class="col-form-label text-label" for="customerName">Name:</label>
                        <input type="text" class="form-control" id="customerName" name="customerName">
                    </div>
                    <div class="form-group col-4">
                        <label class="col-form-label text-label" for="customerPhone">Phone number:</label>
                        <input type="text" class="form-control" id="customerPhone" name="customerPhone">
                    </div>
                    <div class="form-group col-4">
                        <label class="col-form-label text-label" for="customerEmail">Email:</label>
                        <input type="email" class="form-control" id="customerEmail" name="customerEmail">
                    </div>
                    <div class="form-group col-2">
                        <label class="col-form-label text-label" for="customerDate">Date:</label>
                        <input type="text" class="form-control" id="customerDate" name="customerDate" readonly>
                    </div>
                    <div class="form-group col-2">
                        <label class="col-form-label text-label" for="customerTime">Time:</label>
                        <input type="text" class="form-control" id="customerTime" name="customerTime" readonly>
                    </div>
                    <div class="form-group col-4">
                        <label class="col-form-label text-label" for="customerReason">Service Booking:</label>
                        <textarea class="form-control" name="customerReason" id="customerReason"></textarea>
                    </div>
                    <div class="col-12">
                        <label for="customerAddress">Extra info:</label>
                    </div>

                    <div class="form-group col-6">
                        <label class="col-form-label text-label" for="customerHistoryBreath">Professional Note</label>
                        <textarea class="form-control" name="customerHistoryBreath" id="customerHistoryBreath"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="ml-3 btn btn-secondary" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>


