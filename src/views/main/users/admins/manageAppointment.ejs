                        <tr>
                            <td><%= index + 1 %></td>
                            <td><%= x.name %></td>
                           

                            <td class="mw-100 w-25">
                                <button title="View customer's information" type="button" data-customer-id="<%= x.id %>"
                                        class="btn btn-info doctor-view-detail">Detail
                                </button>
                               
                                
                                <i class="fa fa-trash-o" style="cursor: pointer" data-customer-id="<%= x.id %>" aria-hidden="true"
